extends layout 

block content
  div(class='bg-blue-500 p-4 rounded-md shadow-xl text-center font-600 text-white text-xl w-11/12 lg:w-1/2')
    p Do you want to delete this message?
  div(class='p-4 my-4 bg-white rounded-md shadow-xl mb-4 w-11/12 lg:w-1/2')
    div(class='mb-4')
      p(class='bg-blue-500 mb-4 p-2 rounded-md text-center font-600 text-white text-xl w-max') #{message.title} 
        p(class='mb-4 break-all') #{message.body}
      p(class='text-blue-500 text-sm text-right') #{message.author.firstName} #{message.author.lastName},#{message.date}
  div(class='flex w-11/12 lg:w-1/2 justify-center')
    a(href='/' class='p-4 text-white font-black text-xl shadow-xl rounded-md bg-blue-500') CANCEL
    form(action=`/message/${message.id}/delete` method='POST')
      button(type='submit' class='ml-4 p-4 text-white font-black text-xl shadow-xl rounded-md bg-red-500') DELETE